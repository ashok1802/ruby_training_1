<!DOCTYPE html>
<html>
<body>
	<h1>Edit Record</h1>

	<%= form_for @user do |b| %>
	  <%= label_tag(:name, "name:") %>
	  <%= text_field_tag(:name , @user.name) %><br>
	  <%= hidden_field_tag(:id, @user.id) %>
	  <%= label_tag(:mobile, "Mobile:") %>
	  <%= text_field_tag(:mobile , @user.mobile) %><br>
	  <%= label_tag(:email, "Email:") %>
	  <%= text_field_tag(:email , @user.email) %><br>
	  <%= submit_tag("Update") %>
	<% end %>

</body>
</html>